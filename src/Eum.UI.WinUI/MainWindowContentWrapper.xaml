<UserControl
    x:Class="Eum.UI.WinUI.MainWindowContentWrapper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eum.UI.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="using:Eum.UI.WinUI.Views.Shell"
    xmlns:login="using:Eum.UI.WinUI.Views.Login"
    mc:Ignorable="d">
    <Grid>
        <shell:ShellView x:Name="ShellView" x:Load="{x:Bind ViewModel.IsLoginVisible, 
            Converter={StaticResource BoolNegateConverter}, Mode=OneWay}"/>

        <login:ProfilesView x:Name="ProfilesView" x:Load="{x:Bind ViewModel.IsLoginVisible, Mode=OneWay}"/>
    </Grid>
</UserControl>
