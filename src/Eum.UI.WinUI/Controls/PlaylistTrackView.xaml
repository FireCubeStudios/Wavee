        <!-- </Grid> -->
        <!-- -->
        <TextBlock Margin="0,0,8,0" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Grid.Column="1" Text="{x:Bind ViewModel.Track.Name}"/>

        <controls:MetadataControl Grid.Column="2"  Margin="0,0,8,0"
                                  VerticalAlignment="Center" Items="{x:Bind ViewModel.Track.Artists, Converter={StaticResource IdWithTitleToMetadataConverter}}">
            <controls:MetadataControl.TextBlockStyle>
                <Style TargetType="TextBlock">
                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                </Style>
            </controls:MetadataControl.TextBlockStyle>
        </controls:MetadataControl>

        <ContentPresenter VerticalAlignment="Center" Grid.Column="3" ContentTemplate="{StaticResource IdWithTitleItemTemplate}"
                          Content="{x:Bind ViewModel.Track.Group}"
        />

        <TextBlock  VerticalAlignment="Center" Text="{x:Bind ViewModel.Track.Duration, Converter={StaticResource MsToTimestampConverter}}" Grid.Column="5"/>
    </Grid>
</UserControl>
