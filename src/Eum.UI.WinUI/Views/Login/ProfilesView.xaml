                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="3*" />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <local:UserList
                    MinHeight="340"
                    Visibility="{x:Bind ViewModel.IsUserListVisible, Mode=OneWay, Converter={StaticResource TrueToVisibleConverter}}"
                    VerticalAlignment="Center" Grid.Row="1"
                    DataContext="{x:Bind ViewModel}"/>

                <local:CreateOrLinkProfileView Grid.Row="1"
                                               MinHeight="340"
                                              DataContext="{x:Bind ViewModel.CreateOrLinkProfileViewModel}"
                                              Visibility="{x:Bind ViewModel.IsUserListVisible, Mode=OneWay, Converter={StaticResource TrueToCollapsedConverter}}"
                                              VerticalAlignment="Center"/>
            </Grid>
        </Grid>
