    <DataTemplate x:Key="VerticalDiscoItem" x:DataType="artists:DiscographyViewModel">
        <Grid Height="200" Background="Red" />
    </DataTemplate>
    <DataTemplate x:Key="HorizontalAndGridItem" x:DataType="artists:DiscographyViewModel">
        <Border Width="200" Height="250">
            <Border BorderThickness="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border>
                        <Border.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage
                                        DecodePixelHeight="250"
                                        DecodePixelWidth="250"
                                        UriSource="{x:Bind Image}" />
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Border.Background>
                    </Border>
                    <StackPanel Grid.Row="1" Margin="0,4,0,0">
                        <TextBlock
                            HorizontalAlignment="Stretch"
                            FontSize="15"
                            FontWeight="SemiBold"
                            MaxLines="1"
                            Text="{x:Bind Title}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            HorizontalAlignment="Stretch"
                            FontSize="13"
                            FontWeight="Normal"
                            MaxLines="1"
                            Text="{x:Bind Description}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

    </DataTemplate>
    <xamlConverters:TemplateTypeTolayoutConverter
        x:Key="TemplateTypeToItemTemplateConverter"
        GridLayout="{StaticResource HorizontalAndGridItem}"
        HorizontalStack="{StaticResource HorizontalAndGridItem}">
        <xamlConverters:TemplateTypeTolayoutConverter.VerticalStack>
            <DataTemplate x:DataType="artists:DiscographyViewModel">
                <Grid
                    Width="200"
                    Height="200"
                    Background="Red" />
            </DataTemplate>
        </xamlConverters:TemplateTypeTolayoutConverter.VerticalStack>
    </xamlConverters:TemplateTypeTolayoutConverter>
