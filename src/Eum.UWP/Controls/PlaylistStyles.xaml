    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:artists="using:Eum.UI.ViewModels.Artists"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:playback="using:Eum.UI.ViewModels.Playback"
    xmlns:xamlConverters="using:Eum.UWP.XamlConverters">
    <DataTemplate x:Key="IdWithTitleItemTemplate" x:DataType="playback:IdWithTitle">
        <Button
            Padding="0"
            Content="{x:Bind Title}"
            CornerRadius="8"
            Style="{ThemeResource TextBlockButtonStyle}" />
    </DataTemplate>

    <controls:StackLayout
        x:Key="VerticalDisco"
        Orientation="Vertical"
        VirtualizingStackPanel.VirtualizationMode="Recycling" />
    <controls:StackLayout
        x:Key="HorizontalDisco"
        DisableVirtualization="False"
        Orientation="Horizontal"
        Spacing="24"
        VirtualizingStackPanel.VirtualizationMode="Standard" />

    <controls:UniformGridLayout
        x:Name="UniformGridLayout"
        ItemsJustification="Start"
        ItemsStretch="None"
        MinColumnSpacing="24"
        MinItemHeight="200"
        MinItemWidth="200"
        MinRowSpacing="24"
        VirtualizingStackPanel.VirtualizationMode="Recycling" />
    <xamlConverters:TemplateTypeTolayoutConverter
        x:Key="TemplateTypeToLayoutConverter"
        GridLayout="{StaticResource UniformGridLayout}"
        HorizontalStack="{StaticResource HorizontalDisco}"
        VerticalStack="{StaticResource VerticalDisco}" />
