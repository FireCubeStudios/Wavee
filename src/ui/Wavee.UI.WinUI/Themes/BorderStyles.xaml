<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="EvenBorderStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="{ThemeResource LayerFillColorDefaultBrush}" />
        <Setter Property="BorderBrush"
                Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness"
                Value="1" />
    </Style>
    <Style x:Key="OddBorderStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="Transparent" />
    </Style>


    <Style x:Key="EvenBorderStyleGrid"
           TargetType="Grid">
        <Setter Property="Background"
                Value="{ThemeResource LayerFillColorDefaultBrush}" />
        <Setter Property="BorderBrush"
                Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness"
                Value="1" />
    </Style>
    <Style x:Key="OddBorderStyleGrid"
           TargetType="Grid">
        <Setter Property="Background"
                Value="Transparent" />
    </Style>
</ResourceDictionary>