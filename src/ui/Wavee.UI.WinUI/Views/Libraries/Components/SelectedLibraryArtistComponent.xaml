<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Wavee.UI.WinUI.Views.Libraries.Components.SelectedLibraryArtistComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Wavee.UI.WinUI.Views.Libraries.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollView>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button
                    Padding="0,8,0,0"
                    Content="vaultboy"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                    Style="{ThemeResource TextBlockButtonStyle}" />
                <TextBlock
                    Grid.Row="1"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Opacity=".6">
                    <Run Text="2" />
                    <Run Text="albums," />
                    <Run Text="14" />
                    <Run Text="songs" />
                </TextBlock>
            </Grid>
            <Grid Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="200" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Grid.RowSpan="2" Orientation="Vertical">
                    <Image Source="https://i.scdn.co/image/ab67616d00001e021b1f1eef349cc5636464c8cf" />
                    <TextBlock
                        Margin="0,8"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Opacity=".6">
                        <Run Text="1 song" />
                        <Run Text="•" />
                        <Run Text="3 min, 10 sec" />
                    </TextBlock>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Margin="18,0"
                    Orientation="Vertical">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="everything, everywhere (feat. eaJ)" />
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Opacity=".6">
                        <Run Text="SINGLE" />
                        <Run Text="•" />
                        <Run Text="2023" />
                    </TextBlock>
                </StackPanel>


                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="12,12,0,0">
                    <Grid
                        Height="44"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderThickness="0"
                        CornerRadius="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="38" />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="14" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="14" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="14" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                Text="1" />

                            <FontIcon
                                Grid.Column="3"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="16"
                                Glyph="&#xEB51;" />
                        </Grid>

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="everything, everywhere (feat. eaJ)" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Text="3:10" />
                        <Button
                            Grid.Column="3"
                            Padding="8,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Style="{ThemeResource TextBlockButtonStyle}">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE712;" />
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollView>
</UserControl>
