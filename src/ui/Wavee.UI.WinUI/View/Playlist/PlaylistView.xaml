<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Wavee.UI.WinUI.View.Playlist.PlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Wavee.UI.WinUI.View.Playlist"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:playlist="using:Wavee.UI.ViewModel.Playlist"
             xmlns:labs="using:CommunityToolkit.Labs.WinUI"
             mc:Ignorable="d">


    <Grid>
        <ListView ItemsSource="{x:Bind IncrementalLoadingCollection,Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="playlist:PlaylistTrackViewModel">
                    <Grid>
                        <Grid Padding="4,6"
                              Height="48"
                              x:Name="LoadingGrid"
                              x:Load="{x:Bind Loading,Mode=OneWay}"
                              ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="74" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="124" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <labs:Shimmer Margin="8,0,0,0"
                                          IsActive="True" />
                            <labs:Shimmer Grid.Column="1"
                                          IsActive="True" />
                            <labs:Shimmer  Grid.Column="2"
                                           IsActive="True" />
                            <labs:Shimmer  Grid.Column="3"
                                           IsActive="True" />
                        </Grid>

                        <Grid x:Name="LoadedGrid"
                              x:Load="{x:Bind Negate(Loading),Mode=OneWay}">
                            <TextBlock Text="{x:Bind Track.Name,Mode=OneWay}"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
