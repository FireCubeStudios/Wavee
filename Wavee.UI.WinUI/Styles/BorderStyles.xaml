<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:Wavee.UI.WinUI.Styles"
                    xmlns:styleSelector="using:Wavee.UI.WinUI.Style_Selector">
    <Style TargetType="Border"
           x:Key="OddRow">
        <Setter Property="Background"
                Value="{ThemeResource LayerFillColorDefaultBrush}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="CornerRadius"
                Value="8" />
        <Setter Property="BorderBrush"
                Value="{ThemeResource CardStrokeColorDefaultBrush}" />
    </Style>
    <Style TargetType="Border"
           x:Key="EvenRow">
        <Setter Property="Background"
                Value="Transparent" />
    </Style>
    <styleSelector:GetRowStyleConverter Odd="{StaticResource OddRow}"
                                        Even="{StaticResource EvenRow}"
                                        x:Key="GetRowStyle" />
    <styleSelector:GetRowStyleConverter Odd="{StaticResource EvenRow}"
                                        Even="{StaticResource OddRow}"
                                        x:Key="GetRowStyleReverse" />
</ResourceDictionary>
